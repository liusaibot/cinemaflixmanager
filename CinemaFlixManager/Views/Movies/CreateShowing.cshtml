@model CinemaFlixManager.Models.MovieShowings

    @*<link href="~/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/AdminLTE/bower_components/select2/dist/css/select2.min.css">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateShowing">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CinemaId" class="control-label"></label>
                    <select asp-for="CinemaId" class="form-control select2" data-placeholder="Select a Cinema" asp-items="ViewBag.CinemaId"></select>
                </div>
                <div class="form-group">
                    <input asp-for="MovieId" type="hidden" class="form-control" />
                    @*<select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>*@
                </div>
                <div class="form-group">
                    <label asp-for="ShowingDate" class="control-label"></label>
                    <input asp-for="ShowingDate" asp-format="asp-format="{0:MM/dd/yyyy}" class="form-control" />
                    <span asp-validation-for="ShowingDate" class="text-danger"></span>
                </div>
            
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/AdminLTE/bower_components/select2/dist/js/select2.full.min.js"></script>
        @*<script src="~/Tags-input/tagsinput.js"></script>*@
        <script>
            //$('#reservation').daterangepicker()
            $('.select2').select2()

        </script>
    }
